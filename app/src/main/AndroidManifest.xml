<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.progmobklp1.aplikasipresensi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiPresensi">
        <activity
            android:name=".activity.CreatePresensi"
            android:label="Tambahkan presensi baru">

        </activity>
        <activity
            android:name=".activity.DetailPresensiActivity"
            android:label="Detail presensi" />
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AplikasiPresensi.NoActionBar" />

        <activity android:name=".activity.HomeActivity"
            />
        <activity android:name=".activity.AboutActivity"
            android:theme="@style/Theme.AplikasiPresensi.NoActionBar"

            />
        <activity android:name=".activity.MainActivity"
            />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>